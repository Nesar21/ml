from sklearn.datasets import load_iris
from sklearn.cluster import KMeans
import matplotlib.pyplot as plt

# Load first two features
X = load_iris().data[:, :2]

# Train K-Means and get labels + centers
kmeans = KMeans(n_clusters=3, random_state=0).fit(X)
labels, centers = kmeans.labels_, kmeans.cluster_centers_

# Print results
print("Cluster labels:\n", labels)
print("\nCluster centers:\n", centers)

# Plot clusters with centers
plt.scatter(X[:, 0], X[:, 1], c=labels, cmap='viridis', edgecolor='k')
plt.scatter(centers[:, 0], centers[:, 1], s=200, c='red', marker='X', label="Centroids")
plt.title("K-Means on Iris (Sepal Length vs Width)")
plt.xlabel("Sepal Length")
plt.ylabel("Sepal Width")
plt.legend()
plt.show()
